<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FF6A00"
    tools:context="aau.corp.android.app.iitdcomplaints.HostelComplaints">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/launch_complaint_hostel"
        android:layout_centerHorizontal="true"
        android:background="#c81126"
        android:textColor="#FFFFFF"
        android:text="Launch Complaint"
        android:textSize="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_marginTop="10dp"/>

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_filter_list"
        android:layout_below="@+id/launch_complaint_hostel"
        android:layout_alignLeft="@+id/launch_complaint_hostel"
        android:layout_alignStart="@+id/launch_complaint_hostel"
        android:layout_marginTop="10dp">
    </Spinner>


    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_search_list"
        android:layout_below="@+id/launch_complaint_hostel"
        android:layout_alignRight="@+id/launch_complaint_hostel"
        android:layout_alignEnd="@+id/launch_complaint_hostel"
        android:layout_marginTop="10dp">
    </Spinner>

    <TableLayout
        android:id="@+id/all_hostel_complaint_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_search_list"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


    </TableLayout>


            <TableLayout
                android:id="@+id/resolved_hostel_complaint_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner_search_list"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">


            </TableLayout>
            <TableLayout
                android:id="@+id/unresolved_hostel_complaint_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner_search_list"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">


            </TableLayout>

            <TableLayout
                android:id="@+id/electricity_hostel_complaint_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner_search_list"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">


            </TableLayout>

            <TableLayout
                android:id="@+id/plumber_hostel_complaint_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner_search_list"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">


            </TableLayout>

            <TableLayout
                android:id="@+id/carpentry_hostel_complaint_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner_search_list"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">


            </TableLayout>

            <TableLayout
                android:id="@+id/internet_hostel_complaint_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner_search_list"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">


            </TableLayout>

            <TableLayout
                android:id="@+id/sweeper_hostel_complaint_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner_search_list"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">


            </TableLayout>

            <TableLayout
                android:id="@+id/other_hostel_complaint_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner_search_list"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">


            </TableLayout>



        </RelativeLayout>
    </ScrollView>



    </RelativeLayout>
