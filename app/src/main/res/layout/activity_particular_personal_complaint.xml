<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="aau.corp.android.app.iitdcomplaints.ParticularPersonalComplaint"
    android:background="@drawable/ddd">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Title-"
                android:id="@+id/particular_personal_complaint_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="20dp"
                android:textSize="20dp"
                    android:textColor="#091167" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/particular_personal_complaint_title_answer"
                android:text="Answer"
                android:textSize="20dp"
                android:paddingTop="5dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Posted By-"
                android:id="@+id/particular_personal_complaint_posted_by"
                android:textSize="20dp"
                android:layout_below="@+id/particular_personal_complaint_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#091167" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/particular_personal_complaint_posted_by_answer"
                android:text="Answer"
                android:textSize="20dp"
                android:paddingTop="5dp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Room No-"
                    android:id="@+id/particular_personal_complaint_room_no"
                    android:textSize="20dp"
                    android:textColor="#091167" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/particular_personal_complaint_room_no_answer"
                    android:text="Answer"
                    android:paddingLeft="20dp"
                    android:textSize="20dp"
                    android:paddingTop="5dp"
                    android:textStyle="italic" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Hostel-"
                android:id="@+id/particular_personal_complaint_hostel"
                android:textSize="20dp"
                android:textColor="#091167" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/particular_personal_complaint_hostel_answer"
                android:text="Answer"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:textStyle="italic"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Contact Info-"
                android:id="@+id/particular_personal_complaint_contact_info"
                android:textSize="20dp"
                android:textColor="#091167" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/particular_personal_complaint_contact_info_answer"
                android:text="Answer"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:textStyle="italic"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Complaint type-"
                android:id="@+id/particular_personal_complaint_type"
                android:textSize="20dp"
                android:textColor="#091167" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/particular_personal_complaint_type_answer"
                android:text="Answer"
                android:paddingTop="5dp"
                android:paddingLeft="20dp"
                android:textStyle="italic"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Status-"
                android:id="@+id/particular_personal_complaint_status"
                android:textSize="20dp"
                android:layout_below="@+id/particular_personal_complaint_type"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#091167" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/particular_personal_complaint_status_answer"
                android:text="Answer"
                android:paddingTop="5dp"
                android:paddingLeft="20dp"
                android:textSize="20dp"
                android:textStyle="italic" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Description-"
                android:id="@+id/particular_complaint_description"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="#091167" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Description Answer"
                android:id="@+id/particular_personal_complaint_description_answer"
                android:textSize="20dp"
                android:textStyle="italic" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/particular_personal_complaint_image" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark as Resolved"
                android:id="@+id/particular_personal_complaint_mark_as_resolved"
                android:background="#140079"
                android:layout_marginTop="20sp"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"/>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:hint="Enter You comment here"
                android:id="@+id/particular_personal_complaint_add_comment_answer"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/particular_complaint_add_comment"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="#091167" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Press to submit your comment"
                android:id="@+id/particular_personal_complaint_post_comment"
                android:background="#140079"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/particular_personal_complaint_comment_table"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/particular_personal_complaint_add_comment_answer"></TableLayout>

        </LinearLayout>
</RelativeLayout>
    </ScrollView>
</RelativeLayout>