<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FF6A00"
    tools:context="aau.corp.android.app.iitdcomplaints.LaunchInstituteComplaint">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Title"
                android:id="@+id/textview_institute_complaint_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="20dp"
                android:textSize="20dp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_institute_complaint_title"
                android:layout_below="@+id/textview_institute_complaint_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Description"
                android:id="@+id/textview_institute_complaint_description"
                android:layout_below="@+id/editText_institute_complaint_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="20dp"
                android:textSize="20dp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_institute_complaint_description"
                android:layout_below="@+id/textview_institute_complaint_description"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Type"
                android:id="@+id/textview_instute_complaint_type"
                android:layout_below="@+id/editText_institute_complaint_description"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="20dp"
                android:textSize="20dp" />


            <Spinner
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_institute_complaint_type_list"
                android:layout_below="@+id/textview_instute_complaint_type"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:paddingTop="10dp"
                android:textSize="25dp"
                >
            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Contact Info"
                android:id="@+id/textview_institute_complaint_contact_info"
                android:layout_below="@+id/spinner_institute_complaint_type_list"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="20dp"
                android:textSize="20dp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_institute_complaint_contact_info"
                android:layout_below="@+id/textview_institute_complaint_contact_info"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:textSize="20dp"
                />



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Image"
                android:id="@+id/institute_complaint_image_button"
                android:background="#c81126"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_below="@+id/editText_institute_complaint_contact_info"
                android:layout_alignRight="@+id/submit_button_institute_complaint_launch"
                android:layout_alignEnd="@+id/submit_button_institute_complaint_launch"
                android:layout_alignLeft="@+id/submit_button_institute_complaint_launch"
                android:layout_alignStart="@+id/submit_button_institute_complaint_launch" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@+id/institute_complaint_image_button"
                android:id="@+id/imageView_institute_complaint_launch" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/submit_button_institute_complaint_launch"
                android:layout_below="@+id/imageView_institute_complaint_launch"
                android:layout_centerHorizontal="true"
                android:background="#c81126"
                android:textColor="#FFFFFF"
                android:text="Submit"
                android:textSize="20dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:layout_marginTop="20dp"/>



        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
