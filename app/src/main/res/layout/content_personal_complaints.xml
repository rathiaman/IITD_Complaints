<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FF6A00"
    tools:context="aau.corp.android.app.iitdcomplaints.PersonalComplaints">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/launch_complaint"
        android:layout_centerHorizontal="true"
        android:background="#c81126"
        android:textColor="#FFFFFF"
        android:text="Launch Complaint"
        android:textSize="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_marginTop="10dp"/>

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_filter_list"
        android:layout_below="@+id/launch_complaint"
        android:layout_alignLeft="@+id/launch_complaint"
        android:layout_alignStart="@+id/launch_complaint"
        android:layout_marginTop="10dp">
    </Spinner>


    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_search_list"
        android:layout_below="@+id/launch_complaint"
        android:layout_alignRight="@+id/launch_complaint"
        android:layout_alignEnd="@+id/launch_complaint"
        android:layout_marginTop="10dp">
    </Spinner>

    <TableLayout
        android:id="@+id/complaint_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_search_list"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TableRow>

            <TextView
                android:text="S.No"
                android:textSize="20dp"
                android:clickable="false"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="6dp"
                android:textStyle="bold" />

            <TextView
                android:text="Title"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_column="1"
                android:clickable="false"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="6dp"
                android:textStyle="bold" />

            <TextView
                android:text="Status"
                android:textSize="20dp"
                android:layout_column="5"
                android:clickable="false"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="6dp"
                android:textStyle="bold" />

            <TextView
                android:text="Time"
                android:textSize="20dp"
                android:layout_column="5"
                android:clickable="false"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="6dp"
                android:textStyle="bold" />



        </TableRow>

    </TableLayout>


</RelativeLayout>
